{
  "name": "@boba-cli/help",
  "description": "Help components for Boba terminal UIs: key binding renderer and scrollable help bubble",
  "version": "0.1.0-alpha.3",
  "dependencies": {
    "@boba-cli/chapstick": "workspace:*",
    "@boba-cli/key": "workspace:*",
    "@boba-cli/tea": "workspace:*",
    "@boba-cli/viewport": "workspace:*"
  },
  "devDependencies": {
    "typescript": "5.8.2",
    "vitest": "^4.0.16"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist"
  ],
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "scripts": {
    "build": "tsup",
    "check:api-report": "pnpm run generate:api-report",
    "check:eslint": "pnpm run lint",
    "generate:api-report": "api-extractor run --local",
    "lint": "eslint \"{src,test}/**/*.{ts,tsx}\"",
    "test": "vitest run"
  },
  "type": "module",
  "types": "./dist/index.d.ts"
}
