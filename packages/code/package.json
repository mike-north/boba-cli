{
  "name": "@boba-cli/code",
  "description": "Syntax-highlighted code viewer with scrollable viewport for Boba terminal UIs",
  "version": "0.1.0-alpha.3",
  "dependencies": {
    "@boba-cli/chapstick": "workspace:*",
    "@boba-cli/filesystem": "workspace:*",
    "@boba-cli/machine": "workspace:*",
    "@boba-cli/tea": "workspace:*",
    "@boba-cli/viewport": "workspace:*",
    "shiki": "^1.24.2"
  },
  "devDependencies": {
    "@types/node": "^24.10.2",
    "typescript": "5.8.2",
    "vitest": "^4.0.16"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist"
  ],
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "scripts": {
    "build": "tsup",
    "check:api-report": "pnpm run generate:api-report",
    "check:eslint": "pnpm run lint",
    "generate:api-report": "api-extractor run --local",
    "lint": "eslint \"{src,test}/**/*.{ts,tsx}\"",
    "test": "vitest run"
  },
  "type": "module",
  "types": "./dist/index.d.ts"
}
