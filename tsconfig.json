{
  "compilerOptions": {
    "noEmit": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "target": "ES2022",
    "allowJs": true,
    "checkJs": true,
    "strict": true,
    "noImplicitOverride": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "noUncheckedIndexedAccess": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "paths": {
      "@api-extractor-tools/eslint-plugin": [
        "./node_modules/@api-extractor-tools/eslint-plugin/dist/index.d.ts"
      ]
    }
  },
  "include": ["eslint.config.mts", "**/vitest.config.mts"]
}
